<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/refresh_list_footer_bg"
    android:orientation="vertical"
    android:padding="10dp" >

    <ProgressBar
        android:id="@+id/pb_loadmore"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:src="@drawable/double_angle_down" />

    <TextView
        android:id="@+id/txt_footertext"
        style="@style/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/pb_loadmore"
        android:text="@string/refresh_list_footer_text" />

</RelativeLayout>